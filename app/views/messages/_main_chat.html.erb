<div class="main_chat_top">
  <div class="main_chat_top_left">
    <div class="chat_discription">
      すずきちルームです
    </div>
  </div>
  <div class="main_chat_top_right">
    <div class="chat_quit">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main_chat_body">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main_chat_bottom', local: true do |f| %>
  <div class="chat_form">
    <%= f.text_field :content, class: "text_field", placeholder: 'type a message' %>
    <label class="image_field">
      <span class="image_select">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: "submit_field" %>
<% end %>
