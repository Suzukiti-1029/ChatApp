<div class="message">
  <div class="message_informations">
    <div class="information_username">
      <%= message.user.name %>
    </div>
    <div class="information_datetime">
      <%= l message.created_at %>
    </div>
  </div>

  <div class="message_content">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>